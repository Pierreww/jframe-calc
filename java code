    private void btnAddActionPerformed(java.awt.event.ActionEvent evt) {                                       
       int num1, num2, result;
       num1 = Integer.parseInt(txtFirst.getText());
       num2 = Integer.parseInt(txtSecond.getText());
       result = num1 + num2;
       txtResult.setText(String.valueOf(result));
       
    }                                      

    private void txtFirstActionPerformed(java.awt.event.ActionEvent evt) {                                         
        
    }                                        

    private void btnClearActionPerformed(java.awt.event.ActionEvent evt) {                                         
        txtFirst.setText("");
        txtSecond.setText("");
        txtResult.setText("");
        txtFirst.requestFocus();
        
    }                                        

    private void btnSubActionPerformed(java.awt.event.ActionEvent evt) {                                       
          int num1, num2, result;
       num1 = Integer.parseInt(txtFirst.getText());
       num2 = Integer.parseInt(txtSecond.getText());
       result = num1 - num2;
       txtResult.setText(String.valueOf(result));
    }                                      

    private void btnMulActionPerformed(java.awt.event.ActionEvent evt) {                                       
         int num1, num2, result;
       num1 = Integer.parseInt(txtFirst.getText());
       num2 = Integer.parseInt(txtSecond.getText());
       result = num1 * num2;
       txtResult.setText(String.valueOf(result));
    }                                      

    private void btnDivActionPerformed(java.awt.event.ActionEvent evt) {                                       
        int num1, num2, result;
       num1 = Integer.parseInt(txtFirst.getText());
       num2 = Integer.parseInt(txtSecond.getText());
       result = num1 / num2;
       txtResult.setText(String.valueOf(result));
    }                                      

